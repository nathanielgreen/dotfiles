# ***
# Modes
# ***
:: default : yabai -m config active_window_border_color 0xffbb9af7
:: move @ : yabai -m config active_window_border_color 0xff7aa2f7
:: resize @ : yabai -m config active_window_border_color 0xff9ece6a

# Mode Enter and Exit hotkeys
ctrl + cmd - t ; move # Move mode enter
move < escape; default # Move mode exit

ctrl + cmd - r ; resize # Resize mode enter
resize < escape; default # Resize mode exit

# ---

# ***
# Focus Windows + Displays
# ***

# Focus Windows
ctrl + cmd - h : yabai -m window --focus west
ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - l : yabai -m window --focus east

# Focus Displays
ctrl + alt - h : yabai -m display --focus west
ctrl + alt - j : yabai -m display --focus south
ctrl + alt - k : yabai -m display --focus north
ctrl + alt - l : yabai -m display --focus east

# ---

# ***
# Move Windows
# ***
move < h : yabai -m window --swap west
move < j : yabai -m window --swap south
move < k : yabai -m window --swap north
move < l : yabai -m window --swap east
move < shift - h : yabai -m window --warp west
move < shift - j : yabai -m window --warp south
move < shift - k : yabai -m window --warp north
move < shift - l : yabai -m window --warp east
move < alt - h : yabai -m window --display west; yabai -m display --focus west
move < alt - l : yabai -m window --display east; yabai -m display --focus east

# ---

# *** 
# Resize Windows
# ***
resize < h : yabai -m window --resize left:-40:0
resize < j : yabai -m window --resize bottom:0:-40
resize < k : yabai -m window --resize bottom:0:40
resize < l : yabai -m window --resize left:40:0

# ---

# *** 
# Toggles
# ***

# Toggle Split
ctrl + cmd - e : yabai -m window --toggle split

# Toggle Float
ctrl + cmd - f : yabai -m window --toggle float
